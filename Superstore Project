SELECT (item_name), price
FROM superstore
ORDER BY price desc
;
SELECT category,
ROUND(
  SUM(price*stock_quantity*average_rating) /
  SUM(price*stock_quantity),
  2)
  AS value_weighted_avg_rating
  FROM superstore
  GROUP BY category
  ORDER BY value_weighted_avg_rating DESC
  ;
  SELECT (item_name), price, average_rating,
  ROUND(price/average_rating, 2)
  AS price_to_rating_ratio
  FROM superstore
  WHERE category = 'Kitchen Supplies'
  ORDER BY price_to_rating_ratio ASC
  ;
  SELECT category,
  ROUND(AVG(price), 2) AS avg_price,
  ROUND(AVG(stock_quantity), 2) AS avg_stock_quantity,
  ROUND(AVG(price)/AVG(stock_quantity), 2) AS price_per_stock_unit
  FROM superstore 
  GROUP BY category
  ORDER BY avg_price ASC
  ;
